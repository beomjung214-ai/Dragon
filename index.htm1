<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<title>Dragon Application</title>
<style>
body {
    margin: 0;
    font-family: Arial, sans-serif;
    background: #121212;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.container {
    width: 320px;
    background: #1e1e1e;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0,0,0,0.6);
    text-align: center;
}

input {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    border-radius: 6px;
    border: none;
    outline: none;
}

button {
    width: 100%;
    padding: 12px;
    margin-top: 15px;
    background: #00a2ff;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
}

button:hover {
    background: #0088d1;
}

.option {
    background: #2a2a2a;
    padding: 12px;
    margin: 10px 0;
    border-radius: 6px;
    cursor: pointer;
}

.option:hover {
    background: #3a3a3a;
}

.hidden {
    display: none;
}
</style>
</head>
<body>

<!-- í˜ì´ì§€ 1 -->
<div class="container" id="page1">
    <h2>Login</h2>
    <input type="text" id="input1" placeholder="Username">
    <input type="password" id="input2" placeholder="Password">
    <button onclick="goPage2()">Next</button>
</div>

<!-- í˜ì´ì§€ 2 -->
<div class="container hidden" id="page2">
    <h2>Select Option</h2>
    <div class="option" onclick="selectDragon('Shadow Dragon')">ğŸ‰ Shadow Dragon</div>
    <div class="option" onclick="selectDragon('Ice Dragon')">â„ï¸ Ice Dragon</div>
    <div class="option" onclick="selectDragon('Bat Dragon')">ğŸ¦‡ Bat Dragon</div>
</div>

<!-- í˜ì´ì§€ 3 -->
<div class="container hidden" id="page3">
    <h2>ì‹ ì²­ì´ ì™„ë£Œ ë˜ì—ˆìŠµë‹ˆë‹¤</h2>
    <p id="result"></p>
</div>

<script>
function goPage2() {
    const val1 = document.getElementById("input1").value;
    const val2 = document.getElementById("input2").value;

    // ë‚˜ë§Œ ë³¼ ìˆ˜ ìˆê²Œ ë¡œì»¬ ì €ì¥
    localStorage.setItem("private_input_1", val1);
    localStorage.setItem("private_input_2", val2);

    document.getElementById("page1").classList.add("hidden");
    document.getElementById("page2").classList.remove("hidden");
}

function selectDragon(dragon) {
    localStorage.setItem("selected_dragon", dragon);

    document.getElementById("page2").classList.add("hidden");
    document.getElementById("page3").classList.remove("hidden");

    document.getElementById("result").innerText =
        "ì„ íƒí•œ ì˜µì…˜: " + dragon;
}
</script>

</body>
</html>
